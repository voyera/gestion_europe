<%= form_for(@cooperative) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :short_name %>
    <%= f.text_field :short_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :organism %>
    <%= f.text_field :organism, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :institution %>
    <%= f.text_field :institution, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bank_account %>
    <%= f.text_field :bank_account, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>